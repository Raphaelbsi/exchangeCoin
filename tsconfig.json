{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "target": "es2016",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "jest.config.ts"]
}
